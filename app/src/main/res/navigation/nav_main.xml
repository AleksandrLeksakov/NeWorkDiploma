<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.fragments.FeedFragment"
        android:label="Лента"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_feedFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_feedFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />

        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.netology.nmedia.fragments.RegistrationFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_registration" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.netology.nmedia.fragments.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.fragments.NewPostFragment"
        android:label="Новый пост"
        tools:layout="@layout/fragment_new_post" />

    <fragment
        android:id="@+id/eventsFragment"
        android:name="ru.netology.nmedia.fragments.EventsFragment"
        android:label="События"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/usersFragment"
        android:name="ru.netology.nmedia.fragments.UsersFragment"
        android:label="Пользователи"
        tools:layout="@layout/fragment_users" />

</navigation>